# Fiscally Backend Environment Variables
# Copy this to .env and fill in your values

# App
DEBUG=true
ENVIRONMENT=development

# Database (SQLAlchemy)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fiscally
# If you later switch to an async SQLAlchemy engine, you can use:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fiscally

# JWT Settings
# Use a long random value (32+ chars). In non-development environments,
# startup will fail if this looks default/weak.
SECRET_KEY=replace-with-a-long-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI (for AI features)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Search API (optional, used for unknown merchant lookup)
# Get from https://serper.dev (free tier available)
SERPER_API_KEY=your-serper-api-key

# Firebase (optional, push notifications)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json



OPIK_API_KEY=your-opik-api-key
OPIK_PROJECT_NAME=fiscally
OPIK_WORKSPACE=your-opik-workspace
